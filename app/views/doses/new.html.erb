<div class="container d-flex justify-content-center">
  <div class="col-12 col-lg-6 mt-5">
    <h1> <%= @cocktail.name %></h1>

    <h3>Add a new dose</h3>
    <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.association :ingredient, input_html: { class: "beautiful-dropdown" } %>
    <%= f.input :description %>
    <%= f.button :submit, class: 'btn-primary btn-block' %>
    <% end %>
  </div>
   <p><%= link_to "Back to list", cocktails_path %></p>
</div>

